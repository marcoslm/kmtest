        Private Function HandleListViewHeaderLayoutInner(prc As WinNativeFormsBASE.RECT, pwpos As WINDOWPOS) As Variant
           ' Debug.Print "HandleListViewHeaderLayoutInner"
            If ColumnHeaderIcons IsNot Nothing Then
                'Debug.Print "HandleListViewHeaderLayoutInner (" & prc.Left & "," & prc.Top & ")-(" & prc.Right & "," & prc.Bottom & ")", "(" & pwpos.x & "," & pwpos.y & ")-(" & pwpos.cx & "," & pwpos.cy & ")", ColumnHeaderIcons.ImageHeight
                Dim imageListHeight As Long = ColumnHeaderIcons.ImageHeight
                If prc.Top < imageListHeight Then
                    If imageListHeight < prc.Bottom Then
                        prc.Top = imageListHeight
                    Else
                        prc.Top = prc.Bottom
                    End If
                End If
                If pwpos.cy < imageListHeight Then
                    If imageListHeight < prc.Bottom Then
                        pwpos.cy = imageListHeight
                    Else
                        pwpos.cy = prc.Bottom
                    End If
                End If
            End If
        End Function
        
        Private Function HandleListViewHeaderLayout(layoutInfo As HDLAYOUT) As Variant
            Return HandleListViewHeaderLayoutInner(layoutInfo.prc, layoutInfo.pwpos)
        End Function
        
        Private Sub RootWindowElementHeader_PostProcessMessage(ByVal Message As Long, ByVal wParam As LongPtr, ByVal lParam As LongPtr, MutedReturnValue As LongPtr, ByVal PostMessageCookie As Long)
            Const HDM_LAYOUT As Long = (&H1200 + 5)
            If Message = HDM_LAYOUT Then
                MutedReturnValue = CLngPtr(HandleListViewHeaderLayout(lParam))
            End If
        End Sub
        
