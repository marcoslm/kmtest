        Private Sub SyncHeaderImages()
            Dim header As Any = hWndHeader
            If header <> 0 Then
                Set RootWindowElementHeader = Nothing       ' remove subclassing first
                Set RootWindowElementHeader = CType(Of WindowElement)(ControlContext.SubClassWindowElement(header))
                RootWindowElementHeader.ActivatePrePostMessages(True)
                WinNativeFormsBASE.SendMessageW(header, HDM_SETIMAGELIST, HDSIL_NORMAL, If(InternalColumnHeaderIcons IsNot Nothing, InternalColumnHeaderIcons.hImageList, vbNullPtr))
                'WinNativeFormsBASE.RedrawWindow(header, 0, 0, WinNativeFormsBASE.RDW_UPDATENOW Or WinNativeFormsBASE.RDW_INVALIDATE Or WinNativeFormsBASE.RDW_ERASE Or WinNativeFormsBASE.RDW_ALLCHILDREN)
            End If
            
            ' hide and immediately show the list again.  this is necessary to ensure that HDM_LAYOUT is asked from us (to adjust the height of the header according to the icons)
            WinNativeFormsBASE.ShowWindow(hWnd, WinNativeFormsBASE.SW_HIDE)
            WinNativeFormsBASE.ShowWindow(hWnd, WinNativeFormsBASE.SW_SHOW)
        End Sub
                
