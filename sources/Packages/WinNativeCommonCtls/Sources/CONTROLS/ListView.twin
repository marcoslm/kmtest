        Private Sub ChangeWindowStyleFlag(ByVal flag As Long, ByVal Value As Boolean)
        	Dim dwStyle As Long = WinNativeFormsBASE.USER32_GetWindowLong(Me.RootWindowElement, WinNativeFormsBASE.GWL_STYLE)
